<UserControl x:Class="ais.Views.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ais"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="780">
    <Grid HorizontalAlignment="Stretch" Height="420" VerticalAlignment="Center" Width="780" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"  Background="#9999ff" Opacity="0.85" Panel.ZIndex="100" Grid.ColumnSpan="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.05*"/>
            </Grid.RowDefinitions>
            <Ellipse Grid.Row="1" HorizontalAlignment="Center" Grid.ColumnSpan="2" Height="95"  VerticalAlignment="Center" Width="95" OpacityMask="White" RenderTransformOrigin="0.579,0.469">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="icon.png"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Grid.Row="2" TextAlignment="Right" Padding="0, 0, 5, 0" Grid.Column="0"  TextWrapping="Wrap" Text= "{Binding Name, Mode=TwoWay,  UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Stretch" FontFamily="Verdana" FontSize="13"/>
            <TextBlock Grid.Row="2" TextAlignment="Left" Padding="5, 0, 0, 0" Grid.Column="1" TextWrapping="Wrap" Text="{Binding LastName, Mode=TwoWay,  UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Stretch"  FontFamily="Verdana" FontSize="13"/>
            <TextBlock Grid.Row="3" HorizontalAlignment="Center" Padding="0, 5, 0, 0" Grid.ColumnSpan="2"  TextWrapping="Wrap" Text="{Binding Login, Mode=TwoWay,  UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Stretch"  FontFamily="Verdana" FontSize="13"/>
            <TextBlock Grid.Row="4" HorizontalAlignment="Center" Padding="0, 5, 0, 0" Grid.ColumnSpan="2"  TextWrapping="Wrap" Text="{Binding Type, Mode=TwoWay,  UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Stretch" FontFamily="Verdana" FontSize="13"/>
            <Grid  Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Center"  Margin="0, 0, 0, 5" VerticalAlignment="Center" Background="#FFA9B9E7" Opacity="0.9" MinWidth="130">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Content="Tables" HorizontalContentAlignment="Left" Padding="12" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="Verdana" FontSize="16" Click="Button_Click"/>
                <Button Content="Queries" HorizontalContentAlignment="Left" Padding="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" FontFamily="Verdana" FontSize="16"/>
                <Button Content="Users" HorizontalContentAlignment="Left" Padding="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="2"  BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" FontFamily="Verdana" FontSize="16"/>
                <Button Content="About" HorizontalContentAlignment="Left" Padding="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="3" BorderBrush="{x:Null}" Background="{x:Null}"  Foreground="White" FontFamily="Verdana" FontSize="16"/>
            </Grid>
            <Button HorizontalAlignment="Left" Grid.Row="0" Margin="10,10,0,10" VerticalAlignment="Stretch" Width="20" Height="20" BorderBrush="{x:Null}" Command="{Binding CloseCommand}">
                <Button.Background>
                    <ImageBrush ImageSource="power.png"/>
                </Button.Background>
            </Button>

        </Grid>
        <Grid Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Background="White"  >
            <Grid.RowDefinitions>
                <RowDefinition Height="0.85*"/>
                <RowDefinition Height="0.15*"/>
            </Grid.RowDefinitions>
            <Grid  Name="Tables" Grid.RowSpan="2" HorizontalAlignment="Left"  VerticalAlignment="Stretch" Width="185" Visibility="Hidden" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Content="Customer" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="0" VerticalAlignment="Center" Width="185" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="17" Click="Button_Click_1" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                <Button Content="Cust_Tel" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="185"  BorderBrush="{x:Null}" Background="{x:Null}" FontFamily="Verdana" FontSize="17" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"  Click="Button_Click_1"/>
                <Button Content="Cornices" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="185"  Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="17" Click="Button_Click_1" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                <Button Content="Workshop" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Width="185" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="17" Click="Button_Click_1" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                <Button Content="Order" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="4" VerticalAlignment="Center" Width="185"  Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="17" Click="Button_Click_1" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                <Button Content="Contractor" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="5" VerticalAlignment="Center" Width="185"  Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="17" Click="Button_Click_1" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                <Button Content="Contractor_Tel" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="6" VerticalAlignment="Center" Width="185" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="17" Click="Button_Click_1" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                <Button Content="Goods" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="7" VerticalAlignment="Center" Width="185" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="17" Click="Button_Click_1" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                <Button Content="Contractor_Goods" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="8" VerticalAlignment="Center" Width="185" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="17" Click="Button_Click_1" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                <Button Content="Order_Goods" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="9" VerticalAlignment="Center" Width="185" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="17" Click="Button_Click_1" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                <Button Content="Contract" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="10" VerticalAlignment="Center" Width="185" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="17" Click="Button_Click_1" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                <Button Content="Contract_Goods" Padding="20, 7, 0, 7" HorizontalContentAlignment="Left" Grid.Row="11" VerticalAlignment="Center" Width="185" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="17" Click="Button_Click_1" Command="{Binding ShowTable}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            </Grid>

            <Grid  Name="something" HorizontalAlignment="Center" Height="330"  VerticalAlignment="Center" MinWidth="515">
                <DataGrid Name="DataGrid" HorizontalAlignment="Stretch" Width="515" Background="Transparent" AutoGenerateColumns="True" SelectedItem="{Binding SelectedRow}" ItemsSource="{Binding Path=Table, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single" Visibility="Hidden" IsReadOnly="True" BorderBrush="{x:Null}"/>
            </Grid>

            <Grid  Name="buttons" Grid.Row="1" HorizontalAlignment="Center"  VerticalAlignment="Center"  Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Add" HorizontalAlignment="Left" Margin="15, 0" VerticalAlignment="Center" Width="115" Height="35" Background="#FF9999FF" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="14" Foreground="White" Grid.Column="0" Command="{Binding AddCommand}"/>
                <Button Content="Update" HorizontalAlignment="Center" Margin="15, 0" VerticalAlignment="Center" Width="115" Height="35" Background="#FF9999FF" BorderBrush="{x:Null}" FontFamily="Verdana" FontSize="14" Foreground="White" Grid.Column="1" />
                <Button Content="Delete" HorizontalAlignment="Right" Margin="15, 0" VerticalAlignment="Center" Width="115" Height="35" BorderBrush="{x:Null}" Background="#FF9999FF" FontFamily="Verdana" FontSize="14" Foreground="White" Grid.Column="2" Command="{Binding DeleteCommand}"/>
            </Grid>
        </Grid>

    </Grid>

</UserControl>
