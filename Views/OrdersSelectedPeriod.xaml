<Window x:Class="ais.Views.OrdersSelectedPeriod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ais.Views"
        mc:Ignorable="d"
        Title="Orders in selected period" Height="450" Width="800">
    <Grid>
        <DataGrid Name="Table" Margin="40" Background="Transparent" AutoGenerateColumns="True"  ItemsSource="{Binding Path=OrdersList, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single" IsReadOnly="True"/>
    </Grid>
</Window>
